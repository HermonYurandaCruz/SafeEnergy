<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgraud"
    android:layout_height="match_parent"
    tools:context=".TelaReclamacao">

    <TextView
        android:id="@+id/TV_Reclamacao"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:text="Reclamação"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/V_Box"
        android:layout_width="350dp"
        android:layout_height="550dp"
        style="@style/ConteinerNovoCadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="90dp"
        />

    <EditText
        android:id="@+id/Et_numeroCelularReclamacao"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Et_textoDaReclamacao"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Numero de Celular"
        android:gravity="center"/>
    <EditText
        android:id="@+id/Et_localDaReclamacao"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Et_numeroCelularReclamacao"
        android:layout_marginTop="20dp"
        android:inputType="textLongMessage"
        android:hint="Localizacao"
        android:gravity="center"/>

    <EditText
        android:id="@+id/Et_textoDaReclamacao"
        android:layout_width="300dp"
        android:layout_height="300dp"
        style="@style/TextoLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/V_Box"
        android:layout_marginTop="40dp"
        android:hint="Qual é a sua reclamação???"
        android:gravity="center"
        android:textSize="20sp"
        />
<androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        style="@style/Botao2"
        app:layout_constraintTop_toBottomOf="@id/Et_localDaReclamacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Enviar"
        android:textColor="@color/white"/>






</androidx.constraintlayout.widget.ConstraintLayout>