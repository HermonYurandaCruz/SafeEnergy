<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".NovoCadastro">

<TextView
    android:id="@+id/Novo_cadastro"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:text="Novo Cadastro"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textAlignment="center"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/Nome"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="25dp"
    />

    <EditText
        android:id="@+id/Nome"
        style="@style/TextoLogin"
        android:drawableRight="@drawable/ic_conta"
        android:hint="Nome: "
        android:inputType="text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/DataNascimento"
        app:layout_constraintTop_toBottomOf="@id/Novo_cadastro"
        android:layout_marginTop="20dp"

        />
    <EditText
        android:id="@+id/DataNascimento"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/Nome"
        android:hint="Data de Nacimento"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="date"
        android:drawableRight="@drawable/ic_calendario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/Morada"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/DataNascimento"
        android:hint="Morada"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="text"
        android:drawableRight="@drawable/ic_mapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <EditText
        android:id="@+id/Contacto"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/Morada"
        android:hint="Contacto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="number"
        android:drawableRight="@drawable/ic_contacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <EditText
        android:id="@+id/NovoEmail"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/Contacto"
        android:hint="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:drawableRight="@drawable/ic_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/NovaSenha"
        style="@style/TextoLogin"
        app:layout_constraintTop_toBottomOf="@id/NovoEmail"
        android:hint="Senha"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="numberPassword"
        android:drawableRight="@drawable/ic_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Confirmar"
        style="@style/Botao"
        android:layout_marginBottom="35dp"
        android:onClick="AbrirTelaCategoria2"
        android:text="Confirmar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NovaSenha" />


</androidx.constraintlayout.widget.ConstraintLayout>