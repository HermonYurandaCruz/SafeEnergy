<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".NovoCadastro">

    <EditText
        android:id="@+id/Nome"
        style="@style/TextBox"
        android:drawableRight="@drawable/ic_conta"
        android:hint="Nome: "
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/DataNascimento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"

        />

    <EditText
        android:id="@+id/DataNascimento"
        style="@style/TextBox"
        app:layout_constraintTop_toBottomOf="@id/Nome"
        android:hint="Data de Nacimento"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="date"
        android:drawableRight="@drawable/ic_calendario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/Morada"
        style="@style/TextBox"
        app:layout_constraintTop_toBottomOf="@id/DataNascimento"
        android:hint="Morada"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="text"
        android:drawableRight="@drawable/ic_mapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <EditText
        android:id="@+id/Contacto"
        style="@style/TextBox"
        app:layout_constraintTop_toBottomOf="@id/Morada"
        android:hint="Contacto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="number"
        android:drawableRight="@drawable/ic_contacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <EditText
        android:id="@+id/NovoEmail"
        style="@style/TextBox"
        app:layout_constraintTop_toBottomOf="@id/Contacto"
        android:hint="Email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:drawableRight="@drawable/ic_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/Password"
        style="@style/TextBox"
        app:layout_constraintTop_toBottomOf="@id/NovoEmail"
        android:hint="Senha"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Confirmar"
        style="@style/Botao"
        android:onClick="AbrirTelaCategoria2"
        android:text="Confirmar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Password"
        android:layout_marginTop="10dp"

       />


</androidx.constraintlayout.widget.ConstraintLayout>